
@model CreateIntrodactionVM

<div class="col-lg-8 col-xlg-9 col-md-12">
    <div class="card">
        <div class="card-body">
            <form class="form-horizontal form-material" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0" asp-for="IconName"> </label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="IconName" class="form-control p-0 border-0">
                        <span class="text-danger" asp-validation-for="IconName"></span>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0" asp-for="Title"> </label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Title" class="form-control p-0 border-0">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0" asp-for="Description"> </label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Description" class="form-control p-0 border-0">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success"> Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>